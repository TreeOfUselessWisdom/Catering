@page
@model SelectRoleModel
@{
    ViewData["Title"] = "Select Your Role";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h2 class="card-title text-center mb-4">@ViewData["Title"]</h2>
                    <form method="post">
                        <div class="mb-3 form-check">
                            <input type="radio" class="form-check-input" id="roleCustomer" name="Role" value="Customer" required />
                            <label class="form-check-label" for="roleCustomer">Customer</label>
                        </div>
                        <div class="mb-4 form-check">
                            <input type="radio" class="form-check-input" id="roleCaterer" name="Role" value="Caterer" required />
                            <label class="form-check-label" for="roleCaterer">Caterer</label>
                        </div>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">Continue</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
