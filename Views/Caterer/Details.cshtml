@using Catering.Models.ViewModels
@model CatererDetailsViewModel

<h2>@Model.Caterer.FullName’s Menu</h2>
<p>@Model.Caterer.Address – Capacity: @Model.Caterer.Capacity</p>

<table class="table">
    <thead>
        <tr><th>Category</th><th>Item</th><th>Price</th><th></th></tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td>@item.Category.Name</td>
                <td>@item.Name</td>
                <td>@item.Price.ToString("C")</td>
                <td>
                    <a asp-controller="Booking"
                       asp-action="Create"
                       asp-route-catererId="@Model.Caterer.Id"
                       asp-route-itemId="@item.ItemId"
                       class="btn btn-sm btn-primary">
                        Book
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
