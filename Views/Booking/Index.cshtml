@model IEnumerable<Catering.Models.Booking>
<h2>Manage Bookings</h2>
<table class="table">
    <thead><tr><th>Booking ID</th><th>Customer</th><th>Date</th><th>Guests</th><th>Status</th><th></th></tr></thead>
    <tbody>
        @foreach (var b in Model)
        {
            <tr>
                <td>@b.BookingId</td>
                <td>@b.Customer.FullName</td>
                <td>@b.Date.ToShortDateString()</td>
                <td>@b.NumGuests</td>
                <td>@b.Status</td>
                <td>
                    <a asp-action="UpdateStatus" asp-route-id="@b.BookingId" class="btn btn-sm btn-secondary">Change Status</a>
                </td>
            </tr>
        }
    </tbody>
</table>
