@model IEnumerable<Catering.Models.Booking>

@{
    ViewData["Title"] = "My Bookings";
}

<h2>@ViewData["Title"]</h2>

<table class="table">
    <thead>
        <tr><th>ID</th><th>Date</th><th>Venue</th><th>Guests</th><th>Amount</th><th>Status</th><th></th></tr>
    </thead>
    <tbody>
        @foreach (var b in Model)
        {
            <tr>
                <td>@b.BookingId</td>
                <td>@b.Date.ToShortDateString()</td>
                <td>@b.Venue</td>
                <td>@b.NumGuests</td>
                <td>@b.InvoiceAmount.ToString("C")</td>
                <td>@b.Status</td>
                <td>
                    @* cancel stub *@
                    <a asp-action="Cancel" asp-route-id="@b.BookingId" class="btn btn-sm btn-danger">
                        Cancel
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
